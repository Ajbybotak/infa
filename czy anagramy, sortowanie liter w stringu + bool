void Sortuj(string &s)
{
    int i, j, m;
    char ch;
    for (i = 0; i < s.size() - 1; i++)
    {
        m = i;
        for (j = i + 1; j < s.size(); j++)
            if (s[j] < s[m]) m = j;
        ch = s[i]; s[i] = s[m]; s[m] = ch;
    }
}



bool Anagramy(string s1, string s2)
{
    if (s1.size() != s2.size()) return false;
    Sortuj(s1);
    Sortuj(s2);
    return (s1 == s2);
}
