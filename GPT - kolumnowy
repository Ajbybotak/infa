string szyfrujKolumnowy(const string& tekst, int kolumny) {
    int n = tekst.length();
    int wiersze = (n + kolumny - 1) / kolumny;
    string uzupełnionyTekst = tekst;

    while (uzupełnionyTekst.length() < wiersze * kolumny) {
        uzupełnionyTekst += 'X';
    }

    char tabela[wiersze][kolumny];
    int index = 0;

    for (int i = 0; i < wiersze; ++i) {
        for (int j = 0; j < kolumny; ++j) {
            tabela[i][j] = uzupełnionyTekst[index++];
        }
    }

    string wynik = "";
    for (int j = 0; j < kolumny; ++j) {
        for (int i = 0; i < wiersze; ++i) {
            wynik += tabela[i][j];
        }
    }

    return wynik;
}

int main() {
    string tekst;
    int kolumny;

    cout << "Podaj tekst do zaszyfrowania: ";
    getline(cin, tekst);
    
    cout << "Podaj liczbę kolumn (klucz): ";
    cin >> kolumny;

    string zaszyfrowanyTekst = szyfrujKolumnowy(tekst, kolumny);

    cout << "Zaszyfrowany tekst: " << zaszyfrowanyTekst << endl;

    return 0;
}
